{% extends 'base.html.twig' %}

{% block title %}Tu pregunta{% endblock %}

{% block body %}
<style>
    .example-wrapper {padding:10px; border-radius:10px; background-color:white; margin: 1em auto; max-width: auto; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: lightgray; padding: 2px 6px; }
    #botonEnviar { padding:5px;}
    li {margin-top: 10px}
</style>

<div class="example-wrapper">
    <h1>Pregunta nยบ: {{pregunta.id}} {{ pregunta.titulo }}</h1>

    <h2>Respuestas Disponibles:</h2>

    <form method="post" action="Controller/RespuestaController.php">
        <ul class="listado" style="list-style:none">
            <li>
                <label>
                    <input type="radio" name="respuesta" value="{{ pregunta.respuesta1 }}">
                    {{ pregunta.respuesta1 }}
                </label>
            </li>
            <li>
                <label>
                    <input type="radio" name="respuesta" value="{{ pregunta.respuesta2 }}">
                    {{ pregunta.respuesta2 }}
                </label>
            </li>
            <li>
                <label>
                    <input type="radio" name="respuesta" value="{{ pregunta.respuesta3 }}">
                    {{ pregunta.respuesta3 }}
                </label>
            </li>
            <li>
                <label>
                    <input type="radio" name="respuesta" value="{{ pregunta.respuesta4 }}">
                    {{ pregunta.respuesta4 }}
                </label>
            </li>
        </ul>
        <button id="botonEnviar" type="submit">Enviar</button>
    </form>
</div>
{% endblock %}
