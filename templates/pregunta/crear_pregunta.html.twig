{% extends 'base.html.twig' %}

{% block title %}Crear Pregunta{% endblock %}

{% block body %}

    <div class="container">
        <h1>Crear Nueva Pregunta</h1>

        {# Mostrar mensajes flash de Ã©xito, error, etc. #}
    {% for label, messages in app.flashes %}
    <div class="alert alert-{{ label }}">
        {% for message in messages %}
            <p>{{ message }}</p>
        {% endfor %}
    </div>
    {% endfor %}


        {# Formulario para crear la pregunta #}
        {{ form_start(form) }}
        
        <div class="form-group">
            {{ form_label(form.titulo) }}
            {{ form_widget(form.titulo, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.titulo) }}
        </div>

        <div class="form-group">
            {{ form_label(form.fechaInicio) }}
            {{ form_widget(form.fechaInicio, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.fechaInicio) }}
        </div>

        <div class="form-group">
            {{ form_label(form.fechaFin) }}
            {{ form_widget(form.fechaFin, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.fechaFin) }}
        </div>
        

        <div class="form-group">
            {{ form_label(form.respuesta1) }}
            {{ form_widget(form.respuesta1, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.respuesta1) }}
        </div>

        <div class="form-group">
            {{ form_label(form.respuesta2) }}
            {{ form_widget(form.respuesta2, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.respuesta2) }}
        </div>

        <div class="form-group">
            {{ form_label(form.respuesta3) }}
            {{ form_widget(form.respuesta3, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.respuesta3) }}
        </div>

        <div class="form-group">
            {{ form_label(form.respuesta4) }}
            {{ form_widget(form.respuesta4, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.respuesta4) }}
        </div>

        <div class="form-group">
            {{ form_label(form.respuestaCorrecta) }}
            {{ form_widget(form.respuestaCorrecta, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.respuestaCorrecta) }}
        </div>

        <button type="submit" class="btn btn-primary">Crear Pregunta</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
